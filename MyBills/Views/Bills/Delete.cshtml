@model MyBills.Models.Bill

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Bill</legend>

    <div class="display-label">BillDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.BillDate)</div>

    <div class="display-label">ReceivedDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReceivedDate)</div>

    <div class="display-label">DueDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.DueDate)</div>

    <div class="display-label">Amount</div>
    <div class="display-field">@String.Format("{0:F}", Model.Amount)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


